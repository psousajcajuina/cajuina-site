---
import { twMerge } from 'tailwind-merge';

const {
  title = await Astro.slots.render('default'),
  subtitle = await Astro.slots.render('subtitle'),
  class: className = '',
} = Astro.props;
---

<header
  class={twMerge('mx-auto mb-8 max-w-3xl text-center md:mb-16', className)}
>
  <h1
    class="leading-tighter font-heading! text-caju-heading-primary! text-4xl font-bold tracking-tighter md:text-5xl"
    set:html={title}
  />
  {
    subtitle && (
      <div
        class="mx-auto mt-2 text-xl font-medium text-gray-500 md:mt-3 dark:text-slate-400"
        set:html={subtitle}
      />
    )
  }
</header>
