---
interface Props {
  type: string;
  title: string;
  description: string;
  icon: string;
  variant?: 'default' | 'youtube' | 'instagram';
  'data-category'?: string;
}

const {
  type,
  title,
  description,
  icon,
  variant = 'default',
  'data-category': category,
} = Astro.props;

const gradientClass = (() => {
  switch (variant) {
    case 'youtube':
      return 'bg-gradient-to-br from-red-600 to-red-700';
    case 'instagram':
      return 'bg-gradient-to-br from-amber-500 via-pink-500 to-purple-600';
    default:
      return 'bg-gradient-to-br from-indigo-500 to-purple-600';
  }
})();
---

<div
  class={`block-item h-full ${gradientClass} group cursor-move select-none rounded-lg border-2 border-transparent px-3 py-2.5 transition-all duration-200 hover:translate-x-1 hover:border-white/30 hover:shadow-lg hover:shadow-indigo-500/40 active:scale-98`}
  data-type={type}
  data-category={category}
  draggable="true"
>
  <div class="mb-0.5 flex items-center gap-2 text-sm font-semibold text-white">
    <span>{icon}</span>
    <span>{title}</span>
  </div>
  <div class="text-xs text-white/80">
    {description}
  </div>
</div>
