---
import { Icon } from 'astro-icon/components';
import Logo from '@/components/Logo.astro';
import ToggleMenu from '@/components/common/ToggleMenu.astro';
import Button from '@/components/ui/Button.astro';

import { getHomePermalink } from '@/utils/permalinks';
import { trimSlash } from '@/utils/permalinks';
import type { CallToAction } from '@/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isFixed?: boolean;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isFixed = false,
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;
---

<header
  class:list={[
    {
      sticky: isSticky && !isFixed,
      fixed: isFixed && !isSticky,
      relative: !isSticky && !isFixed,
    },
    'top-0 z-40 mx-auto w-full flex-none border-b border-gray-50/0 bg-none transition-opacity ease-in-out',
    'lg:px-5',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <!-- Gradiente de fundo verde -->
  <div
    class="from-caju-header-primary via-caju-header-primary/90 pointer-events-none absolute inset-0 h-full bg-linear-to-b from-0% via-70% to-transparent"
  >
  </div>

  <!-- CONTAINER PRINCIPAL - Organiza todo o conteúdo do header -->
  <div
    class:list={[
      'text-default relative mx-auto w-full px-3 py-3 md:px-6',
      'md:flex md:justify-between',
    ]}
  >
    <!-- SEÇÃO 1 MOBILE: Logo + Botão Menu Mobile (esquerda) -->
    <!--  -->
    <div class:list={['flex justify-between']}>
      <!-- Logo clicável que leva pra home -->
      <a class="flex w-fit items-center" href={getHomePermalink()}>
        <Logo />
      </a>

      <!-- Botão hamburguer (só aparece no mobile) -->
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>

    <!-- SEÇÃO 2: Menu de Navegação (centro) - Escondido no mobile -->
    <nav class="w-auto gap-3 md:flex" aria-label="Navegação Principal">
      <!-- Lista de itens do menu -->
      <ul
        class="flex w-full flex-col text-xl font-medium tracking-[0.01rem] md:w-auto md:flex-row md:justify-center md:self-center md:text-[0.9375rem]"
      >
        {
          links.map(({ text, href, links }) => (
            <li class={links?.length ? 'dropdown' : ''}>
              {/* Se o link tem sub-links, cria um dropdown */}
              {links?.length ? (
                <>
                  {/* Botão do dropdown */}
                  <button
                    type="button"
                    class="hover:text-link flex items-center px-4 py-3 whitespace-nowrap dark:hover:text-white"
                  >
                    {text}{' '}
                    <Icon
                      name="tabler:chevron-down"
                      class="ml-0.5 hidden h-3.5 w-3.5 md:inline rtl:mr-0.5 rtl:ml-0"
                    />
                  </button>

                  {/* Submenu que aparece ao clicar/hover */}
                  <ul class="dropdown-menu dark:md:bg-dark rounded pl-4 font-medium drop-shadow-xl md:absolute md:hidden md:min-w-[200px] md:bg-white/90 md:pl-0 md:backdrop-blur-md">
                    {links.map(({ text: text2, href: href2 }) => (
                      <li>
                        <a
                          class:list={[
                            'hover:text-link whitespace-no-wrap block px-5 py-2 first:rounded-t last:rounded-b md:hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white',
                            { 'aw-link-active': href2 === currentPath },
                          ]}
                          href={href2}
                        >
                          {text2}
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                /* Se não tem sub-links, cria um link simples */
                <a
                  class:list={[
                    'hover:text-link flex items-center px-4 py-3 whitespace-nowrap dark:hover:text-white',
                    { 'aw-link-active': href === currentPath },
                  ]}
                  href={href}
                >
                  {text}
                </a>
              )}
            </li>
          ))
        }
      </ul>
      <!-- Ações -->
      <div class="flex items-center">
        {
          actions?.length ? (
            <div class="flex items-center justify-between gap-5">
              {actions.map((btnProps) => (
                <Button
                  {...btnProps}
                  class="mt-0! max-h-[52px] max-w-[206px] py-2 text-sm font-semibold normal-case md:px-2 lg:px-3"
                />
              ))}
            </div>
          ) : (
            ''
          )
        }
      </div>
    </nav>
  </div>
</header>
