    <script>
      const templates = {
        'two-columns': `[[two-columns:70/30]]\n[col1]\nConte√∫do da coluna 1 (70%)\n[/col1]\n[col2]\nConte√∫do da coluna 2 (30%)\n[/col2]\n[[/two-columns]]`,
        'image-left': `[[image-left: /images/sua-imagem.jpg]]\nSeu texto aqui ao lado da imagem.\n[[/image-left]]`,
        'image-right': `[[image-right: /images/sua-imagem.jpg]]\nTexto √† esquerda da imagem.\n[[/image-right]]`,
        card: `[[card]]\nConte√∫do do card simples.\n[[/card]]`,
        'card-highlighted': `[[card:highlighted]]\nCard com gradiente - perfeito para CTAs!\n[[/card]]`,
        'alert-info': `[[alert:info]]\nEsta √© uma informa√ß√£o √∫til.\n[[/alert]]`,
        'alert-success': `[[alert:success]]\nOpera√ß√£o realizada com sucesso!\n[[/alert]]`,
        'alert-warning': `[[alert:warning]]\nAten√ß√£o: verifique antes de prosseguir.\n[[/alert]]`,
        'alert-error': `[[alert:error]]\nErro: algo deu errado.\n[[/alert]]`,
      };

      let blocks = [];

      const dropZone = document.getElementById('dropZone');
      const blocksContainer = document.getElementById('blocksContainer');
      const emptyState = document.getElementById('emptyState');
      const preview = document.getElementById('preview');
      const codeBlock = document.getElementById('codeBlock');
      const copyButton = document.getElementById('copyButton');
      const clearButton = document.getElementById('clearButton');
      const blockItems = document.querySelectorAll('.block-item');
      const youtubeModal = document.getElementById('youtubeModal');
      const youtubeInput = document.getElementById('youtubeInput');
      const modalCancel = document.getElementById('modalCancel');
      const modalConfirm = document.getElementById('modalConfirm');

      // Drag and Drop
      blockItems.forEach((item) => {
        item.addEventListener('dragstart', (e) => {
          e.dataTransfer.setData('text/plain', item.dataset.type);
        });

        item.addEventListener('click', () => {
          const type = item.dataset.type;
          if (type === 'youtube') {
            openYoutubeModal();
          } else {
            addBlock(type);
          }
        });
      });

      dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('drag-over');
      });

      dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('drag-over');
      });

      dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('drag-over');
        const type = e.dataTransfer.getData('text/plain');
        if (type === 'youtube') {
          openYoutubeModal();
        } else if (type) {
          addBlock(type);
        }
      });

      // YouTube Modal
      function openYoutubeModal() {
        youtubeModal.classList.add('active');
        youtubeInput.value = '';
        youtubeInput.focus();
      }

      function closeYoutubeModal() {
        youtubeModal.classList.remove('active');
      }

      modalCancel.addEventListener('click', closeYoutubeModal);

      modalConfirm.addEventListener('click', () => {
        const url = youtubeInput.value.trim();
        if (!url) {
          alert('Por favor, cole uma URL do YouTube');
          return;
        }

        const match = url.match(
          /(?:v=|youtu\.be\/|embed\/)([a-zA-Z0-9_-]{11})/
        );
        if (!match) {
          alert('‚ùå URL do YouTube inv√°lida');
          return;
        }

        const videoId = match[1];
        const shortcode = `[[youtube:${videoId}]]`;
        blocks.push(shortcode);
        updateUI();
        closeYoutubeModal();
      });

      youtubeInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          modalConfirm.click();
        }
      });

      youtubeModal.addEventListener('click', (e) => {
        if (e.target === youtubeModal) {
          closeYoutubeModal();
        }
      });

      function addBlock(type) {
        const template = templates[type];
        if (!template) return;
        blocks.push(template);
        updateUI();
      }

      function removeBlock(index) {
        blocks.splice(index, 1);
        updateUI();
      }

      function updateUI() {
        if (blocks.length === 0) {
          emptyState.style.display = 'block';
          blocksContainer.innerHTML = '';
        } else {
          emptyState.style.display = 'none';
          blocksContainer.innerHTML = blocks
            .map((block, index) => {
              const firstLine = block.split('\n')[0];
              return `
              <div class="added-block">
                <div class="added-block-code">${escapeHtml(firstLine)}...</div>
                <button class="btn-remove" onclick="removeBlock(${index})">‚úï</button>
              </div>
            `;
            })
            .join('');
        }

        const markdown = blocks.join('\n\n');
        codeBlock.innerHTML = markdown
          ? `<span style="color:#58a6ff">${escapeHtml(markdown)}</span>`
          : '<span class="code-empty">// Seu c√≥digo aparecer√° aqui</span>';

        updatePreview(markdown);
      }

      function updatePreview(markdown) {
        if (!markdown) {
          preview.innerHTML =
            '<div class="preview-empty">Seu conte√∫do aparecer√° aqui...</div>';
          return;
        }

        preview.innerHTML = processShortcodes(markdown);
      }

      function processShortcodes(markdown) {
        let html = markdown;

        // YouTube
        html = html.replace(
          /\[\[youtube:([a-zA-Z0-9_-]+)\]\]/g,
          (match, videoId) => {
            return `<div class="youtube-embed"><iframe src="https://www.youtube.com/embed/${videoId}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></div>`;
          }
        );

        // Two columns
        html = html.replace(
          /\[\[two-columns:(\d+)\/(\d+)\]\]([\s\S]*?)\[\[\/two-columns\]\]/g,
          (match, col1, col2, content) => {
            const col1Content =
              content.match(/\[col1\]([\s\S]*?)\[\/col1\]/)?.[1] || '';
            const col2Content =
              content.match(/\[col2\]([\s\S]*?)\[\/col2\]/)?.[1] || '';
            return `<div class="layout-two-columns" style="--col1:${col1}%;--col2:${col2}%;"><div class="layout-column-1">${col1Content.trim()}</div><div class="layout-column-2">${col2Content.trim()}</div></div>`;
          }
        );

        // Image left/right
        html = html.replace(
          /\[\[image-(left|right):\s*([^\]]+)\]\]([\s\S]*?)\[\[\/image-\1\]\]/g,
          (match, position, url, content) => {
            return `<div class="layout-image-${position}"><div class="layout-image-container"><img src="${url.trim()}" alt="" loading="lazy" /></div><div class="layout-text-content">${content.trim()}</div></div>`;
          }
        );

        // Cards
        html = html.replace(
          /\[\[card(?::([^\]]+))?\]\]([\s\S]*?)\[\[\/card\]\]/g,
          (match, variant, content) => {
            const cardClass = variant ? `layout-card-${variant.trim()}` : '';
            return `<div class="layout-card ${cardClass}">${content.trim()}</div>`;
          }
        );

        // Alerts
        html = html.replace(
          /\[\[alert:(\w+)\]\]([\s\S]*?)\[\[\/alert\]\]/g,
          (match, type, content) => {
            const icons = {
              info: '‚ÑπÔ∏è',
              success: '‚úÖ',
              warning: '‚ö†Ô∏è',
              error: '‚ùå',
            };
            const icon = icons[type] || icons.info;
            return `<div class="layout-alert layout-alert-${type}"><span class="layout-alert-icon">${icon}</span><div class="layout-alert-content">${content.trim()}</div></div>`;
          }
        );

        return html;
      }

      function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }

      copyButton.addEventListener('click', () => {
        const markdown = blocks.join('\n\n');
        if (!markdown) {
          alert('Adicione alguns blocos primeiro!');
          return;
        }

        navigator.clipboard.writeText(markdown).then(() => {
          const originalHTML = copyButton.innerHTML;
          copyButton.innerHTML = '<span>‚úÖ</span> Copiado!';
          copyButton.classList.add('btn-success');

          setTimeout(() => {
            copyButton.innerHTML = originalHTML;
            copyButton.classList.remove('btn-success');
          }, 2000);
        });
      });

      clearButton.addEventListener('click', () => {
        if (blocks.length === 0) return;
        if (confirm('Limpar todos os blocos?')) {
          blocks = [];
          updateUI();
        }
      });

      window.removeBlock = removeBlock;

      updateUI();
    </script>
  </div>
</Layout>
