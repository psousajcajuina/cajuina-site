        />
      </div>

      <div
        class="mt-6 flex flex-col gap-3 rounded-lg border border-neutral-700/70 bg-neutral-950/60 p-4 md:flex-row md:items-center md:justify-between"
      >
        <div>
          <div class="text-sm font-semibold text-neutral-300">
            Atalho para o navegador
          </div>
          <div class="text-xs text-neutral-500">
            Gere o shortcode de v√≠deos do YouTube em um clique.
          </div>
        </div>
        <a
          href="javascript:(function(){const url=prompt('Cole a URL do YouTube:');if(!url)return;const match=url.match(/(?:v=|youtu\\.be\\/|embed\\/)([a-zA-Z0-9_-]{11})/);if(match){const code='[[youtube:'+match[1]+']]';navigator.clipboard.writeText(code).then(()=>alert('‚úÖ Copiado!\\n\\n'+code));} else{alert('‚ùå URL inv√°lida');}})();"
          class="inline-flex cursor-move items-center justify-center gap-2 rounded-lg bg-linear-to-br from-red-600 to-red-700 px-4 py-2.5 text-xs font-semibold text-white transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-red-500/40"
        >
