{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-backend",
    "rootDir": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["api/**/*", "tina/**/*", "env.ts", "consts.ts"],
  "exclude": ["node_modules", "dist", "dist-backend"]
}