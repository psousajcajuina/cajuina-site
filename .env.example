# Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# Prefixos: BACKEND_ = servidor Node.js | FRONTEND_ = Astro SSG

# =============================================================================
# BACKEND - GitHub Configuration (Git Provider para TinaCMS)
# =============================================================================
BACKEND_GITHUB_BRANCH=cms/push
BACKEND_GITHUB_REPO=cajuina-site
BACKEND_GITHUB_OWNER=psousajcajuina
BACKEND_GITHUB_TOKEN=your_github_personal_access_token

# =============================================================================
# BACKEND - Authentication (NextAuth + Microsoft Entra ID)
# =============================================================================
BACKEND_NEXTAUTH_SECRET=your_nextauth_secret_min_32_chars
BACKEND_AUTH_MS_CLIENT_ID=your_microsoft_entra_client_id
BACKEND_AUTH_MS_CLIENT_SECRET=your_microsoft_entra_client_secret
BACKEND_AUTH_MS_TENANT_ID=your_microsoft_entra_tenant_id

# =============================================================================
# BACKEND - Database (Upstash Redis)
# =============================================================================
# Development: use local redis
BACKEND_UPSTASH_REDIS_URL=http://localhost:8079
BACKEND_UPSTASH_REDIS_TOKEN=example_token
# Production: use Upstash Redis
# BACKEND_UPSTASH_REDIS_URL=https://your-redis-instance.upstash.io
# BACKEND_UPSTASH_REDIS_TOKEN=your_upstash_redis_token

# =============================================================================
# BACKEND - Server Configuration
# =============================================================================
BACKEND_PORT=4001
BACKEND_CORS_ORIGINS=http://localhost:4321
# Production: adicione múltiplas origens separadas por vírgula
# BACKEND_CORS_ORIGINS=https://cajuinasaogeraldo.com.br,https://www.cajuinasaogeraldo.com.br
BACKEND_DEBUG=true

# =============================================================================
# FRONTEND - Site Information
# =============================================================================
FRONTEND_SITE_URL=https://cajuinasaogeraldo.com.br
FRONTEND_SITE_TITLE=São Geraldo
FRONTEND_SITE_DESCRIPTION=Somos uma marca caririense que oferece à sociedade refrigerantes com alto padrão de qualidade.

# =============================================================================
# FRONTEND - TinaCMS Client (variáveis públicas - expostas no browser)
# =============================================================================
# Development: apontar para localhost
FRONTEND_TINA_GRAPHQL_URL=http://localhost:4001/graphql
FRONTEND_TINA_API_URL=http://localhost:4001
FRONTEND_TINA_IS_LOCAL=true

# Production: apontar para servidor backend separado
# FRONTEND_TINA_GRAPHQL_URL=https://seu-backend.exemplo.com/api/tina/graphql
# FRONTEND_TINA_API_URL=https://seu-backend.exemplo.com
# FRONTEND_TINA_IS_LOCAL=false

# =============================================================================
# FRONTEND - Public Variables for Build (prefixar com PUBLIC_)
# =============================================================================
# Astro requer prefixo PUBLIC_ para expor no browser
PUBLIC_TINA_GRAPHQL_URL=http://localhost:4001/graphql
PUBLIC_TINA_API_URL=http://localhost:4001
# Production:
# PUBLIC_TINA_GRAPHQL_URL=https://seu-backend.exemplo.com/api/tina/graphql
# PUBLIC_TINA_API_URL=https://seu-backend.exemplo.com
